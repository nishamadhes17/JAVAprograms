class Solution {
    public boolean isPalindrome(int x) {
        if(x<0){
            return false;
        }
        int sum=0,r;
        while(x>0){
            r=x%10;
            sum*=10+r;
             x=x/10;
           
        }
        if(sum==x)
            return true;
        else
            return false;
        }
        
    }
